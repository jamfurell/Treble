<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="col">
        <h3 class="text-end">Add New Songs To Your Playlist</h3>
        <form class="row g-3 justify-content-end" action="<%= playlist.id %>/search">
          <div class="col-auto">
            <label for="songTitle" class="visually-hidden">Title</label>
            <input
              type="text"
              class="form-control"
              name="track"
              id="track"
              placeholder="Title"
            />
          </div>
          <div class="col-auto">
            <label for="songArtist" class="visually-hidden">Artist</label>
            <input
              type="text"
              class="form-control"
              name="artist"
              id="artist"
              placeholder="Artist"
            />
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Search</button>
          </div>
          <h3><%= playlist.name %> </h3>
        </form>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Artist</th>
              <th scope="col">Album</th>
            </tr>
          </thead>
          <tbody>
            <% playlist.songs.forEach(function(song){ %>
                    <tr>
                      <td scope="row"><%= song.name %></td>
                      <td><%= song.artist %></td>
                      <td><%= song.name %></td>
                    </tr>
                  <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

